[*.cs]
# IDE0028: Simplify collection initialization
dotnet_diagnostic.IDE0028.severity = suggestion

# IDE0037: Use inferred member name
dotnet_diagnostic.IDE0037.severity = none

# IDE0041: Use 'is null' check
dotnet_diagnostic.IDE0041.severity = silent

# pragma warning restore IDE0052: Remove unread private members
dotnet_diagnostic.IDE0052.severity = none

# IDE0053: Use expression body for lambda expression
dotnet_diagnostic.IDE0053.severity = silent

# IDE0059: Unnecessary assignment of a value
dotnet_diagnostic.IDE0059.severity = suggestion

# IDE0060: Rimuovere il parametro
dotnet_diagnostic.IDE0060.severity = none

# IDE1006: Stili di denominazione
dotnet_diagnostic.IDE1006.severity = suggestion

# CS9113: Parameter is unread.
dotnet_diagnostic.CS9113.severity = silent

# CS0219: La variabile è assegnata, ma il suo valore non viene mai usato
dotnet_diagnostic.CS0219.severity = suggestion
csharp_style_prefer_implicitly_typed_lambda_expression = true:suggestion

